<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hj.manageservice.mapper.StudentScoreMapper">

    <resultMap id="MaxMin" type="com.hj.manageservice.vo.MaxMin">
        <result column="max(score)" property="max" jdbcType="int" />
        <result column="min(score)" property="min" jdbcType="int"/>
    </resultMap>
    <select id="getMaxMIn" resultMap="MaxMin">
        select max(score),min(score) from student_score where user_id =#{id}
    </select>
</mapper>
